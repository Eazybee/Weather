{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "<components>/*": ["./src/components/*"],
      "<hooks>/*": ["./src/hooks/*"],
      "<helpers>/*": ["./src/helpers/*"],
      "<styles>/*": ["./src/styles/*"],
      "<assests>/*": ["./src/assests/*"],
      "<configs>/*": ["./src/configs/*"],
      "<mocks>/*": ["./src/__mocks__/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "experimentalDecorators": true,
  "include": [
    "src", "src/custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "baseUrl": ".",
    "useCache": true
  }
}
